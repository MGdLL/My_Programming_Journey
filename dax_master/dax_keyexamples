DayNo = DAY(Date[Date])

DayShortName = FORMAT(Date[Date], "ddd")

Costs = Fact_Sales[Total Excluding Tax] - Fact_Sales[Profit]

Sales YoY % Old = 
DIVIDE(
        ([sales] - CALCULATE([Sales], 
        SAMEPERIODLASTYEAR(´Dim_DeliveryDate´[Delivery Date Key]))),
        CALCULATE (SAMEPERIODLASTYEAR(´Dim_DeliveryDate´[Delivery Date Key])))

Sales YoY =
VAR SalesPriorYear = CALCULATE ([Sales], SAMEPERIODLASTYEAR (´Dim_DeliveryDate´[Delivery Date Key]))
RETURN
DIVIDE (([sales] - SalesPriorYear), SalesPriorYear)


Total Costs East SUMX =
SUMX(FILTER(Fact_Orders, Fact_Orders[Region]="East"),Fact_Orders[Sales]- Fact_Orders[Profit])


Total Costs RANKX =RANKX(    ALL(Dim_Sales[Region]),[Total Costs])


=IF(critical<>BLANK(), 1, 0)

Total Sales YTD Last Year =
TOTALYTD([Total Sales], SAMEPERIODLASTYEAR(Dim_Calendar[Date]))

Total Sales YoY% =
VAR Sales_LastYear = CALCULATE([Total Sales], SAMEPERIODLASTYEAR(Dim_Calendar[Date])
RETURN
DIVIDE([Total Sales] - Sales_LastYear), Sales_LastYear)


-- Rank avoinding an specific line (the one that does not fulfill the hasoneavalue rule )
(you can do it also using switch)
Actual Transaction Rank =
IF (HASONEAVALUE(Dim_ProductCategory[ProductCategoryName])= TRUE,
RANKX(
        ALL(´Dim_ProductCategory´[ProductCategoryName]),
        [Actual Transaction Amount]),
BLANK())


-- Separate date for year, month, DayNo
Separated Date= DATE(
        LEFT(previous_date, <number os characters that you want form the left>),
        MID (previous_date, <start position from left>, <number of characters>),
        RIGHT(previous_date, <number of characters from the right>))



